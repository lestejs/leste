}
.examples {
  gap: var(--s);
}
.examples .desc {
  min-width: 33ch;
  flex: 1 0;
  padding: var(--xs) 0;
  span {
    background-color: var(--gray100);
    padding: 0 .2em;
  }
  a {
    border-bottom: 1px dotted var(--gray400);
    font-weight: 600;
  }
  .more {
    border-bottom: 0;
    display: flex;
    align-items: center;
    &:after {
      content: '';
      height: .5em;
      width: .5em;
      border-right: 3px solid;
      border-bottom: 3px solid;
      margin-left: .4em;
      transform: rotate(-45deg);
    }
  }
}
.CodeMirror-vscrollbar::-webkit-scrollbar {
  width: 7px;
}

.CodeMirror-vscrollbar::-webkit-scrollbar-track {
  background-color: transparent;
}

.CodeMirror-vscrollbar::-webkit-scrollbar-thumb {
  background-color: var(--gray300);
  border-radius: 1px;
}
iframe {
  width: 100%;
}
.example {
  flex: 3 0 480px;
  outline: 1px solid var(--gray300);
  border-radius: 6px;
  overflow: hidden;
  height: min-content;
}
.example div {
  flex: 3 0;
}
.example iframe {
  flex: 1 0;
}
.title {
  padding: var(--xs);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: var(--fs-xxs);
  color: var(--gray200);
  img {
    width: 100%;
    opacity: .8;
  }
}
.license {
  text-align: center;
  margin-bottom: var(--s);
  color: var(--gray400);
  font-weight: 300;
  font-size: var(--fs-xxs);
  a {
    border-bottom: 1px dotted var(--gray400);
  }
}