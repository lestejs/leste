[name='home'] header {
  padding-top: .8em;
}
.main {
  /* background-image: linear-gradient(to bottom right, #299b28, #eeff81); */
  position: relative;
  h1 {
    font-size: var(--fs-l);
    letter-spacing: -0.012em;
    line-height: 1.1;
    font-weight: 600;
    margin-bottom: 0.3em;
    max-width: 18ch;
  }
  h3 {
    font-size: var(--fs-xs);
    width: 44ch;
  }

  .buttons {
    gap: .8em;
  }
}
h2 {
  font-weight: 600;
}
.columns {
  width: auto;
  display: grid;
  grid-auto-rows: min-content auto;
  grid-template-columns: repeat(auto-fit, minmax(16rem, 1fr));
  grid-column-gap: var(--l);
  grid-row-gap: var(--m);
  .icon {
    background-color: var(--dark);
    padding: 2px;
    width: var(--xs);
    height: var(--xs);
    margin-bottom: var(--xs);
    box-sizing: content-box;
    svg {
      fill: white;
    }
  }
  h2 {
    margin: .5em 0;
  }
}
.footer {
  padding-top: var(--m);
  padding-bottom: var(--m);
  .titles {
    display: grid;
    grid-template-columns: repeat(auto-fill,minmax(12rem,1fr));
    gap: 1rem;
  }
  .title {
    width: 100%;
    min-height: 5rem;
    outline: 1px solid var(--light-gray);
  }
}

.info {

    .bl {
      margin: 1.5em 0;
    }
    h4 {
      margin: .2em 0;
    }

